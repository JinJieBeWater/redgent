{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "test:integration": {
      "dependsOn": [
        "^test:integration"
      ]
    },
    "test:e2e": {
      "dependsOn": [
        "^test:e2e"
      ]
    },
    "format": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        "prettier.config.*"
      ]
    }
  },
  "globalEnv": [
    "PORT",
    "NODE_ENV",
    "OPENROUTER_API_KEY"
  ]
}