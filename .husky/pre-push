#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

echo "📦 Building project..."
pnpm build

echo "🧪 Running all tests..."
pnpm test

echo "🔗 Running integration tests..."
pnpm test:integration

echo "🌐 Running e2e tests..."
pnpm test:e2e

echo "✅ All pre-push checks passed!"
