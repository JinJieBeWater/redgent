{
  "name": "@redgent/db",
  "version": "0.0.0",
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --skip-generate",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:deploy:prod": "dotenv -e .env.production.local -- prisma migrate deploy",
    "db:studio:prod": "dotenv -e .env.production.local -- prisma studio"
  },
  "files": [
    "dist",
    "generated"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./src/index.ts"
    }
  },
  "dependencies": {
    "@prisma/client": "^6.12.0"
  },
  "devDependencies": {
    "@redgent/eslint-config": "workspace:*",
    "@redgent/tsup-config": "workspace:*",
    "@redgent/typescript-config": "workspace:*",
    "@types/node": "^22.15.29",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.31.0",
    "prisma": "^6.13.0",
    "prisma-json-types-generator": "^3.5.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
