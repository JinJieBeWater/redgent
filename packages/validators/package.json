{
  "name": "@redgent/validators",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"  --ignore-path ../../.gitignore",
    "format:check": "prettier --check \"src/**/*.ts\"  --ignore-path ../../.gitignore"
  },
  "dependencies": {
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@redgent/db": "workspace:*",
    "@redgent/types": "workspace:*",
    "@redgent/eslint-config": "workspace:*",
    "@redgent/typescript-config": "workspace:*",
    "@redgent/prettier-config": "workspace:*",
    "eslint": "^9.31.0",
    "@types/node": "^22.15.29",
    "typescript": "^5.8.3",
    "prettier": "^3.4.2"
  },
  "prettier": "@redgent/prettier-config"
}
